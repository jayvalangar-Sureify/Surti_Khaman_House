<resources>
    <!-- Base application theme. -->
    <style name="Theme.SurtiKhamanHouse" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_app_bar</item>
        <item name="colorPrimaryVariant">@color/yellow_notification_bar</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/slid_menu_app_bar_yellow</item>
        <item name="colorSecondaryVariant">@color/slid_menu_app_bar_dark_yellow</item>
        <item name="colorOnSecondary">@color/red_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SurtiKhamanHouse.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SurtiKhamanHouse.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SurtiKhamanHouse.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/yellow_app_bar</item>
        <item name="colorPrimaryDark">@color/yellow_notification_bar</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/yellow_notification_bar</item>
    </style>
</resources>