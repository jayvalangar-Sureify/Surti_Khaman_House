<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/yellow_500">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_expenses"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_expenses_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_and_Time"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/blue_500"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_expenses_amount"
            android:textStyle="bold"
            android:padding="4dp"
            android:textColor="@color/red_500"
            android:textSize="18sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_expense_amount"
            android:inputType="number"
            android:textStyle="bold"
            android:textColor="@color/blue_500"
            android:hint="100"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_expenses_note"
            android:textStyle="bold"
            android:padding="4dp"
            android:textColor="@color/red_500"
            android:textSize="18sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_expense_note"
            android:inputType="text"
            android:textStyle="bold"
            android:textColor="@color/blue_500"
            android:hint="Tea "/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:padding="6dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:padding="6dp"
            android:id="@+id/btn_update"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:padding="6dp"
            android:layout_margin="6dp"
            android:id="@+id/btn_close"/>
    </LinearLayout>
</LinearLayout>