<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/yellow_100"
    android:layout_margin="6dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/yellow_100"
        android:layout_margin="6dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <LinearLayout
                android:id="@+id/ll_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/item_"
                    android:textColor="@color/red_500"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:textColor="@color/blue_500"
                    android:textSize="22dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_item_weight"
                android:layout_below="@+id/ll_item_name"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_"
                    android:textColor="@color/red_500"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_item_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_item_name"
                    android:text="@string/app_name"
                    android:gravity="center"
                    android:textColor="@color/blue_500"
                    android:background="@drawable/border_red_fill_white_rectangle"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_item_price"
                android:layout_below="@+id/ll_item_weight"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/price_"
                    android:textColor="@color/red_500"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_item_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_item_weight"
                    android:text="@string/app_name"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/border_red_fill_white_rectangle"
                    android:textColor="@color/blue_500"
                    android:textSize="20dp" />
            </LinearLayout>



        <LinearLayout
            android:layout_below="@+id/ll_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_update"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Update"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_delte"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Delete"/>
        </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue_500"
        />
</androidx.cardview.widget.CardView>