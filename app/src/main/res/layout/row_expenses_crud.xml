<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/yellow_500"
    android:layout_margin="6dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/yellow_100"
        android:layout_margin="6dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >





<LinearLayout
    android:id="@+id/ll_top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_label_expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_expenses_amount"
        android:textColor="@color/red_500"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_expenses_note"
        android:layout_marginTop="6dp"
        android:background="@drawable/border_red_fill_white_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/tv_label_note"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_expenses_note"
        android:textColor="@color/red_500"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_expenses_amount"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@drawable/border_red_fill_white_rectangle"
        />



</LinearLayout>



            <LinearLayout
                android:layout_below="@+id/ll_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_update"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:text="Update"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_delte"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:text="Delete"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue_500"
        />
</androidx.cardview.widget.CardView>